<?xml version="1.0" encoding="UTF-8"?>
<!--
  CallSign XML CURL Configuration
  
  This connects FreeSWITCH to the CallSign API for dynamic configuration.
  The API provides: directory (user auth), dialplan (call routing), and configuration.
  
  IMPORTANT: Update the gateway-url and credentials to match your CallSign API deployment.
-->
<configuration name="xml_curl.conf" description="CallSign XML CURL Gateway">
  <bindings>
    <!-- Main binding for all XML sections -->
    <binding name="callsign">
      <!-- 
        CallSign API endpoint - handles directory, dialplan, and configuration sections
        Update this URL to match your deployment
      -->
      <param name="gateway-url" value="http://127.0.0.1:8080/freeswitch/xmlapi" bindings="directory|dialplan|configuration"/>
      
      <!-- 
        API authentication - uses the FREESWITCH_API_KEY from .env
        Format: username:apikey
      -->
      <param name="gateway-credentials" value="freeswitch:CHANGE_ME_TO_YOUR_API_KEY"/>
      <param name="auth-scheme" value="basic"/>
      
      <!-- Timeout for API requests (seconds) -->
      <param name="timeout" value="10"/>
      
      <!-- Retry failed requests -->
      <param name="connect-timeout" value="5"/>
      
      <!-- Disable 100-continue for compatibility -->
      <param name="disable-100-continue" value="true"/>
    </binding>
  </bindings>
</configuration>
