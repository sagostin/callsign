<configuration name="xml_curl.conf" description="cURL XML Gateway">
  <bindings>
    <binding name="directory">
      <param name="gateway-url" value="http://127.0.0.1:8080/api/freeswitch/directory" bindings="directory"/>
      <param name="method" value="POST"/>
      <param name="timeout" value="10"/>
      <param name="gateway-credentials" value="callsign:CallSign"/>
      <param name="auth-scheme" value="basic"/>
    </binding>
    <binding name="dialplan">
      <param name="gateway-url" value="http://127.0.0.1:8080/api/freeswitch/dialplan" bindings="dialplan"/>
      <param name="method" value="POST"/>
      <param name="timeout" value="10"/>
      <param name="gateway-credentials" value="callsign:CallSign"/>
      <param name="auth-scheme" value="basic"/>
    </binding>
    <binding name="configuration">
      <param name="gateway-url" value="http://127.0.0.1:8080/api/freeswitch/configuration" bindings="configuration"/>
      <param name="method" value="POST"/>
      <param name="timeout" value="10"/>
      <param name="gateway-credentials" value="callsign:CallSign"/>
      <param name="auth-scheme" value="basic"/>
    </binding>
  </bindings>
</configuration>