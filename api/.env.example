# CallSign API Configuration

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=callsign
DB_PASSWORD=your_password_here
DB_NAME=callsign
DB_SSLMODE=disable

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# FreeSWITCH Event Socket
FREESWITCH_HOST=localhost
FREESWITCH_PORT=8021
FREESWITCH_PASSWORD=ClueCon
# API key for XML CURL authentication (set in xml_curl.conf.xml gateway-credentials)
FREESWITCH_API_KEY=your-freeswitch-api-key

# Logging
LOG_LEVEL=info          # debug, info, warn, error
LOG_FORMAT=text         # text, json

# Loki (optional - for centralized logging)
LOKI_ENABLED=false
LOKI_PUSH_URL=http://loki:3100/loki/api/v1/push
LOKI_USERNAME=
LOKI_PASSWORD=
LOKI_JOB=callsign-api

# Default Admin (created on first run if no users exist)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@localhost
DEFAULT_ADMIN_PASSWORD=changeme123

